//https://www.prisma.io/docs/concepts/database-connectors/mysql

//In order to connect to a MySQL database server, we need to configure a datasource block in our Prisma schema file:
datasource db {
  url      = env("DATABASE_URL") //Specifies the mysql data source connector.
  provider = "mysql" //Specifies the connection URL for the MySQL database server. In this case, an environment variable is used to provide the connection URL..
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique"]
}

//table in Prisma called Conference
model Conference {
  id            Int      @id @default(autoincrement())
  studentNumber String   @db.VarChar(255)
  homeRoomName  String   @db.VarChar(255)
  nouns         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  deleted       Boolean  @default(false)

  @@map("conferences")
}

//table in Prisma called Noun
model Noun {
  id        Int      @id @default(autoincrement())
  name      String   @unique @db.VarChar(255)
  imgSrc    String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deleted   Boolean  @default(false)

  @@map("nouns")
}
